<% if flash[:danger] %>
  <aside class="alert alert-danger">
    <%= flash[:danger] %>
  </aside>
<% end %>

<div class="card text-center">
  <div class="card-header">
    <h1>Connexion </h1>
  </div>

<!-- formulaire de création de gossip form_tag -->

  <%= form_tag url_for(action: 'create'), method: 'POST', class:"card-body" do %>
    <div class="form-group">
      <%= label_tag 'email', 'E-mail' %>
      <%= email_field_tag 'email', nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag 'password', 'Mot de passe' %>
      <%= password_field_tag 'password', nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Se connecter", class: "btn btn-success"%>
    </div>
  <% end %>

<!-- ... -->
  <div class="card-footer text-muted">
    <p>
      <br/>
      <a href="<%= root_path%>" class="btn btn-primary">Retour à l'accueil </a>
    </p>
  </div>
</div>
