<% gossip = @gossip ? @gossip : Gossip.new(title: "", content:"")%>

<% if gossip.errors.any? %>
  <aside class="alert alert-danger">
    <p>Nous n'avons pas réussi à mettre à jour le potin pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </aside>
<% end %>

<div class="card text-center">
  <div class="card-header">
    <h1>Edition de ton potin ! </h1>
  </div>

<!-- formulaire de création de gossip form_tag -->

  <%= form_tag url_for(action: 'update'), method: 'PUT', class:"card-body" do %>
    <div class="form-group">
      <%= label_tag 'title', 'Titre' %>
      <%= text_field_tag 'title', gossip.title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag 'content', 'Contenu' %>
      <%= text_area_tag 'content', gossip.content, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Editer potin", class: "btn btn-info"%>
    </div>
  <% end %>

<!-- ... -->
  <div class="card-footer text-muted">
    <p>
      <br/>
      <a href="<%= root_path%>" class="btn btn-primary">Retour à l'accueil</a>
    </p>
  </div>
</div>